<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signinwith"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="stp.noida.hp.com.memorygame.signinwith">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView2"

        android:layout_alignParentTop="true"
        android:src="@drawable/game"
        android:scaleType="centerCrop"

        android:background="#fd393636" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mem Mind"
        android:id="@+id/textView"
        android:textSize="26sp"
        android:textStyle="italic"
        android:gravity="center"

        android:layout_centerHorizontal="true"
        android:background="#c64e4d4d"
        android:textColor="#e4e2e2" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:ems="10"
        android:id="@+id/editText"
        android:hint="Enter the name"
        android:textSize="23sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/box"
        android:layout_below="@+id/textView"
        android:elevation="5dp"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="password"
        android:textSize="23sp"
        android:background="@drawable/box"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/editText5"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/editText4"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"

        android:id="@+id/button"
        android:background="@drawable/tick_blue"
        android:layout_below="@+id/editText5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/button"
    android:layout_gravity="center"
    android:text=" No account yet? Create one "
    android:layout_marginTop="5dp"
    android:id="@+id/signup"
    android:textColor="@android:color/background_dark"
    android:background="#57a1a1a1" />
    </LinearLayout>
</RelativeLayout>
