<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="stp.noida.hp.com.memorygame.MainGame">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:id="@+id/textView" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:id="@+id/low"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:background="@color/colorPrimary">
        <Button
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_column="1"
            android:layout_row="1"
            android:text="test"
            android:id="@+id/first1"
            android:visibility="visible"
            android:layout_columnWeight="0.3"
            android:layout_rowWeight="0.3" />
        <Button
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_column="2"
            android:layout_row="1"
            android:id="@+id/second1"
            android:layout_columnWeight="0.3"
            android:layout_rowWeight="0.3"/>
        <Button
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_column="3"
            android:layout_row="1"
            android:id="@+id/third1"
            android:layout_columnWeight="0.3"
            android:layout_rowWeight="0.3"/>
        <Button
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_column="1"
            android:layout_row="2"
            android:id="@+id/first2"
            android:layout_columnWeight="0.3"
            android:layout_rowWeight="0.3"/>
        <Button
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_column="2"
            android:layout_row="2"
            android:id="@+id/second2"
            android:layout_columnWeight="0.3"
            android:layout_rowWeight="0.3"/>
        <Button
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_column="3"
            android:layout_row="2"
            android:id="@+id/third2"
            android:layout_columnWeight="0.3"
            android:layout_rowWeight="0.3"/>
        <Button
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_column="1"
            android:layout_row="3"
            android:id="@+id/first3"
            android:layout_columnWeight="0.3"
            android:layout_rowWeight="0.3"/>
        <Button
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_column="2"
            android:layout_row="3"
            android:id="@+id/second3"
            android:layout_columnWeight="0.3"
            android:layout_rowWeight="0.3"/>
        <Button
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_column="3"
            android:layout_row="3"
            android:id="@+id/third3"
            android:layout_columnWeight="0.3"
            android:layout_rowWeight="0.3"/>

    </GridLayout>

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/button" />
</RelativeLayout>
